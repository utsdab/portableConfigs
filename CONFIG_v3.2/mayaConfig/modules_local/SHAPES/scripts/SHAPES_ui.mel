						shpUI_sdkRangeField;
		
		separator -style "none" -h 5;
		
		rowColumnLayout -nc 2 -cw 1 178 -cw 2 145;
			shapesUI_addInterpolateOption 0;
			optionMenuGrp	-l "Infinity" 
