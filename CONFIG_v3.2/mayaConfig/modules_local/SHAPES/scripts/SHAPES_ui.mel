	if ($tool == "brush")
	{
		$label = shapesUI_getHotkey("brush", 0);
		$control = "shpUI_currentBrushHotkeyLabel";
	}
	else if ($tool == "compare")
	{
		$label = shapesUI_getHotkey("compare", 0);
		$control = "shpUI_currentCompareHotkeyLabel";
